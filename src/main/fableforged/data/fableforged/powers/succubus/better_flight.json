{
 "type": "origins:multiple",
  "flight": {
    "type": "origins:creative_flight",
    "condition": {
      "type": "origins:resource",
      "resource": "*:*_timer",
      "comparison": ">",
      "compare_to": 1
    },
    "key": {
      "key": "key.origins.primary_active"
    }
  },
  "timer": {
    "type": "origins:resource",
    "min": 0,
    "max": 240,
    "hud_render": {
      "bar_index": 4
    }
  },
  "countdown": {
    "type": "origins:action_over_time",
    "entity_action": {
      "type": "origins:if_else",
      "condition": {
        "type": "origins:on_block"
      },
      "if_action": {
        "type": "origins:change_resource",
        "resource": "*:*_timer",
        "change": 1
      },
      "else_action": {
        "type": "origins:change_resource",
        "resource": "*:*_timer",
        "change": -20
      }
    },
    "interval": 10
  }
}